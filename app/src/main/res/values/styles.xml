<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.UniversityProject.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/logo_green</item>
    </style>
    <style name="Widget.UniversityProject.Button.Secondary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/logo_orange</item>
    </style>
    <style name="Widget.UniversityProject.ImageButton.Back" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/logo_blue</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:src">@drawable/ic_arrow_back_black_24dp</item>
    </style>
    <style name="Widget.UniversityProject.LinkButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@color/logo_blue</item>
    </style>
</resources>